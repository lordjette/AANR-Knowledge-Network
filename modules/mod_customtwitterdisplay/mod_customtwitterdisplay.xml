<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="2.5" client="site" method="upgrade">
	<name>Custom Twitter Display</name>
	<author>Bill Back</author>
	<creationDate>September 2013</creationDate>
	<copyright>Copyright (C)2013 Free Widgets</copyright>
	<license>GNU General Public License version 2 or later</license>
	<authorEmail>admin@freewidgets.net</authorEmail>
	<authorUrl>www.freewidgets.net</authorUrl>
	<version>1.0</version>
	<description>Thanks for installing Free Widgets</description>
	<files>
		<filename module="mod_customtwitterdisplay">mod_customtwitterdisplay.php</filename>
		<filename>index.html</filename>
		<filename>mod_customtwitterdisplay.xml</filename>
		<filename>TwitterAPIExchange.php</filename>
		<folder>assets</folder>
		<folder>tmpl</folder>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="twitter_username"
					type="text"
					default="google"
					label="Twitter Username"
					description="Put your twitter username" />
				<field
					name="count"
					type="text"
					default="5"
					label="No of Tweets"
					description="No of Tweets You want to Display" />
				<field
					name="consumerkey"
					type="text"
					default="ydccQETDZcumpgoAS1txA"
					label="Consumer Key"
					description="Twitter Application Consumer Key" />
				<field
					name="consumersecret"
					type="text"
					default="AGgtAUrPCeHJOMUNjYtsxVu9ZAYt04vcNOG3msHkLow"
					label="Consumer Secret"
					description="Twitter Application Consumer Secret" />
				<field
					name="accesstoken"
					type="text"
					default="276954301-XA4BswdpmPacGQ9Zy5J6WjYZXKg7mXV2pTFevoDM"
					label="Access Token"
					description="Twitter Application Access Token" />
				<field
					name="accesstokensecret"
					type="text"
					default="9XQQ4ly2uEUFNOT5IPcvViumCvt9ujMw6A6X8mz0vEw"
					label="Access Token Secret"
					description="Twitter Application Access Token Secret" />		
			</fieldset>
			<fieldset name="advanced">
				<field
					name="moduleclass_sfx"
					type="text"
					default=""
					label="Module Class Suffix"
					description="Module Class Suffix" />
			</fieldset>
		</fields>
	</config>
</extension>
